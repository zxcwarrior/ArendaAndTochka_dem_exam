<Page x:Class="ArendaAndTochka_dem_exam.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArendaAndTochka_dem_exam.Pages"
      mc:Ignorable="d"
      Background="White">

    <Grid>
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="32"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                <TextBlock Text="Логин   " FontSize="22"/>
                <TextBox x:Name="LoginTB" Width="180"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                <TextBlock Text="Пароль " FontSize="22"/>
                <PasswordBox x:Name="PassPB" Width="180" Height="25"/>
            </StackPanel>
            <Button x:Name="EnterBT" Click="EnterBT_Click" Content="Войти" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
